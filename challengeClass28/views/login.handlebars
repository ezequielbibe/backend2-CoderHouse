<div class="container col-4 p-3 bg-secondary bg-gradient bg-opacity-25 rounded d-flex flex-column justify-content-center align-items-center">
    <h2>Sign in</h2>
    <form action="/auth/login" method="POST" class="col-12">
        <div class="mb-3">
            <p class="fw-bold fst-italic">email</p>
            <input type="email" class="form-control" name="username" id="username" aria-describedby="username">
        </div>
        <div class="mb-3">
            <p class="fw-bold fst-italic">password</p>
            <input type="password" class="form-control" name="password" id="password" aria-describedby="password">
        </div>
        <div class="col-12 d-flex justify-content-between">
            <button class="btn btn-success">Submit</button>
            <a href='/auth/register' class="btn btn-primary">Sign up</a>
        </div>
    </form>
</div>  